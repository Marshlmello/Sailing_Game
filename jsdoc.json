{
  "source": {
    "include": ["src"],
    "includePattern": ".+\\.js(doc|x)?$",
    "excludePattern": "(node_modules/|docs)"
  },
  "plugins": ["plugins/markdown"],
  "opts": {
    "encoding": "utf8",
    "readme": "./readme.md",
    "destination": "docs/",
    "recurse": true,
    "verbose": true,
    "template": "./node_modules/clean-jsdoc-theme",
    "theme_opts": {
      "default_theme": "dark",
      "base_url": "index.html",
      "search": false,
      "homepageTitle": "Schule 4.0 - Sailing Simulator",
      "includeFilesListInHomepage": true,
      "title": "<a class='sidebar-title' href='index.html' >General</a>"
    }
  },
  "markdown": {
    "hardwrap": false,
    "idInHeadings": true
  }
}
